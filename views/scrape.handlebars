<div class="container spacer">
{{#each articles}}
    <div class="row">
        {{!-- <div class="col-sm-3">
            <img src="{{this.img}}" alt="Post IMG">
        </div> --}}
        <div class="col-sm-7">
            <h4>{{this.title}}</h4>
            {{!-- <br> --}}
            {{!-- <p>{{this.excerpt}}</p> --}}
            <a href="{{this.link}}" target="_BLANK">See this Pupper on Reddit!</a>
        </div>
        {{#if this.saved}}
        <div class="col-sm-2 text-center">
            <a id="{{this._id}}" class="btn btn-primary disabled save">Saved</a>
        </div>
        {{else}}
        <div class="col-sm-2 text-center">
            <a id="{{this._id}}" class="btn btn-primary save">Save Article</a>
        </div>
        {{/if}}
    </div>
    <hr>
 {{/each}}
 </div>